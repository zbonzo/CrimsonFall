{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "./dist/tests",
    "rootDir": "..",
    "baseUrl": ".",
    "paths": {
      "@/*": ["../server/src/*"],
      "@/core/*": ["../server/src/core/*"],
      "@/systems/*": ["../server/src/core/systems/*"],
      "@/entities/*": ["../server/src/core/entities/*"],
      "@/utils/*": ["../server/src/utils/*"],
      "@/client/*": ["../client/src/*"],
      "@/server/*": ["../server/src/*"],
      "@/shared/*": ["../shared/src/*"],
      "@/tests/*": ["./*"]
    },
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "setup.ts",
    "helpers/**/*",
    "fixtures/**/*",
    "mocks/**/*",
    "config/**/*",
    "unit/**/*",
    "integration/**/*",
    "e2e/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "../coverage",
    "../.jest-cache",
    "../test-results"
  ]
}
